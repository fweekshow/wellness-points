<div class="container">
  <div class="page-header">
    <h1>Ally Details</h1>
  </div>

  <div class="ally-details">
    <div class="detail-card">
      <h2><%= @ally.ally_email %></h2>
      
      <div class="detail-info">
        <p><strong>Email:</strong> <%= @ally.ally_email %></p>
        <p><strong>Added:</strong> <%= @ally.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
        <p><strong>Last Updated:</strong> <%= @ally.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      </div>

      <div class="detail-actions">
        <%= link_to "Edit Ally", edit_ally_path(@ally), class: "btn btn-primary" %>
        <%= link_to "Back to Allies", allies_path, class: "btn btn-secondary" %>
        <%= button_to "Remove Ally", ally_path(@ally), method: :delete, 
            class: "btn btn-danger", 
            form: { style: 'display: inline;' },
            data: { confirm: "Are you sure you want to remove this ally? This action cannot be undone." } %>
      </div>
    </div>
  </div>
</div> 