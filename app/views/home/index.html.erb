<div class="container">
  <h1>Welcome to Wellness Points</h1>
  
  <div class="auth-links">
    <% if user_signed_in? %>
      <p>Hello, <%= current_user.username || current_user.email %>!</p>
      <p>Wallet Address: <%= current_user.wallet_address %></p>
      <%= link_to "Go to Dashboard", dashboard_path, class: "btn btn-primary" %>
      <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger", form: { style: 'display: inline;' } %>
    <% else %>
      <div class="landing-content">
        <h2>Join the Wellness Community</h2>
        <p>Connect with allies, earn points for healthy activities, and support each other's wellness journey.</p>
        
        <div style="margin-top: 1.5em; text-align: center;">
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary", style: "margin-right: 1em;" %>
          <%= link_to "Sign In", new_user_session_path, class: "btn btn-secondary" %>
        </div>
        <div style="text-align:center; margin-top: 1em;">
          <%= button_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, method: :post, class: "btn btn-google", style: "background:#4285F4;color:#fff;font-weight:600;padding:12px 32px;border-radius:8px;font-size:1.1em;display:inline-block;border:none;", data: { turbo: false } %>
        </div>
        
        <div class="features">
          <div class="feature">
            <h3>ü§ù Connect with Allies</h3>
            <p>Build your wellness support network</p>
          </div>
          <div class="feature">
            <h3>‚≠ê Earn Points</h3>
            <p>Get rewarded for healthy activities</p>
          </div>
          <div class="feature">
            <h3>üéØ Track Progress</h3>
            <p>Monitor your wellness journey</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
